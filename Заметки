#include <iostream> // директива препроцессора
#include <locale.h> // заголовочный файл стандартной библиотеки языка программирования С, который используется для задач, связанных с локализацией.
using namespace std; /* директива(все определенные ниже имена в программе будут относиться к пространству имен std).
Пространством имен наз-ся область программы, в к-рой определена некоторая совокупность имен. Эти имена неизвестны за пределами данного пространства имен*/
int main()
{
    setlocale(LC_ALL, "");
    int a, b;                                    // описание переменных
    cout << "Введите 2 целых числа" << endl;     // оператор вывода
    cin >> a >> b;                              // оператор ввода
    cout << "Их сумма равна" << a + b;          // оператор вывода
    return 0;
}

#include <iostream>
using namespace std;

int main() {
    int num1, num2;
    char op;
    float result;

    // Get input from user
    cout << "Please enter an expression in the format of a + b or a - b or a * b or a / b:" << endl;
    cin >> num1 >> op >> num2;

    // Calculate result based on operator
    switch (op) {
        case '+':
            result = num1 + num2;
            break;
        case '-':
            result = num1 - num2;
            break;
        case '*':
            result = num1 * num2;
            break;
        case '/':
            result = (float) num1 / num2;
            break;
        default:
            cout << "Invalid operator" << endl;
            return 1;
    }

    // Output result
    cout << "Result: " << result << endl;

    return 0;
}

Стартап идеи:
1.Платформа тестирования мобильного программного обеспечения. 
Платформа, которая автоматизирует процесс тестирования мобильных приложений, что значительно упростит цикл разработки.
2.Услуга виртуального дизайна интерьера: 
платформа, которая виртуально связывает клиентов с дизайнерами интерьеров, позволяя им удаленно совместно работать над планами дизайна помещений.
